var condition = -1 + 3;

if condition == 3 {
    println(3);
} else if condition == 2 {
    println(2);
} else {
     println(-1);
}

 condition = 3;

 var res = if condition == 3 {
     println(3);
     3;
 } else if condition == 2 {
     println(2);
 } else {
      println(-1);
 };

 println(res == 3);

 condition = 4;

 if condition == 3 {
     println(3);
 } else if condition == 2 {
     println(2);
 } else {
     println(-1);
 }